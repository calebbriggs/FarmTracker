
<div class="grid_12">
<h1 class="logo inline ">Users</h1>
<a class="button button-add inline f-right" href="/users/new"> <span class="grid_1 alpha"><h3>User</h3></span></a>
<table>
  <tr class="header">
    <th>Username</th>
    <th>Firstname</th>
    <th>Lastname</th>
    <th>Email</th>
    <th>Phonenumber</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.userName %></td>
    <td><%= user.firstName %></td>
    <td><%= user.lastName %></td>
    <td><%= user.email %></td>
    <td><%= user.phoneNumber %></td>
    <td><%= link_to image_tag("../images/open.png", :title => 'Open'), user %></td>
    <td><%= link_to image_tag("../images/edit.png", :title => 'Edit'), edit_user_path(user) %></td>
    <td><%= link_to image_tag("../images/delete.png", :title => 'Delete'), user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

</div>
